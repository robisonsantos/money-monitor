{
  "name": "money-monitor",
  "version": "1.0.0",
  "description": "Investment tracking application",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "build:netlify": "npm run migrate:production && vite build",
    "build:preview": "npm run migrate:production && vite build --mode development",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "setup": "./scripts/setup-dev.sh",
    "configure": "./scripts/configure.sh",
    "seed": "node scripts/seed.js",
    "db:setup": "node scripts/setup-postgres.js",
    "db:migrate": "node scripts/migrate-sqlite-to-postgres.js",
    "db:migrate-portfolios": "node scripts/migrate-portfolios.js",
    "migrate:production": "node scripts/migrate-production.js",
    "verify:deployment": "node scripts/verify-netlify-deployment.js",
    "db:cleanup-sessions": "node scripts/cleanup-sessions.js",
    "db:start": "./scripts/db-docker.sh start",
    "db:start-admin": "./scripts/db-docker.sh start-admin",
    "db:stop": "./scripts/db-docker.sh stop",
    "db:status": "./scripts/db-docker.sh status",
    "db:logs": "./scripts/db-docker.sh logs",
    "db:connect": "./scripts/db-docker.sh connect",
    "db:reset": "./scripts/db-docker.sh reset",
    "dev:clean": "rm -rf .svelte-kit build dist coverage && npm run dev",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:integration": "playwright test",
    "test:all": "npm run test && npm run test:integration",
    "prepare:deploy": "node scripts/prepare-deploy.js",
    "restore:local": "node scripts/restore-local.js",
    "setup:hooks": "chmod +x .git/hooks/pre-push && echo 'âœ… Git hooks configured'"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@sveltejs/adapter-auto": "^3.3.1",
    "@sveltejs/adapter-netlify": "^5.1.1",
    "@sveltejs/kit": "^2.25.1",
    "@sveltejs/vite-plugin-svelte": "^5.1.1",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.8",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.10.1",
    "autoprefixer": "^10.4.20",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.2.2",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.0.0",
    "vite": "^6.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/pg": "^8.15.4",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^11.5.0",
    "chart.js": "^4.4.6",
    "cookie": "^1.0.2",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.0",
    "lucide-svelte": "^0.468.0",
    "pg": "^8.16.3"
  }
}
